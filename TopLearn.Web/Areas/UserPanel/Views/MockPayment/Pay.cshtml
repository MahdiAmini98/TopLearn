@using TopLearn.Core.DTOs.MockPayment
@model MockPaymentViewModel
@{
    ViewData["Title"] = "درگاه پرداخت تستی";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .payment-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
        }

        .payment-header {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .payment-body {
            padding: 30px;
        }

        .amount-display {
            font-size: 2.5rem;
            font-weight: bold;
            color: #27ae60;
            text-align: center;
            margin: 20px 0;
        }

        .payment-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
        }

        .btn-payment {
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            margin: 10px 0;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-success {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #95a5a6, #7f8c8d);
            color: white;
        }

        .btn-payment:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .bank-logos {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .bank-logo {
            width: 60px;
            height: 40px;
            background: #f8f9fa;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 12px;
            border: 2px solid #e9ecef;
        }

        .security-badge {
            text-align: center;
            color: #7f8c8d;
            font-size: 0.9rem;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="payment-card">
            <div class="payment-header">
                <h2><i class="bi bi-credit-card"></i> درگاه پرداخت تستی</h2>
                <p class="mb-0">شبیه‌سازی درگاه بانکی - محیط توسعه</p>
            </div>

            <div class="payment-body">
                <div class="amount-display">
                    @Model.Amount.ToString("#,0") تومان
                </div>

                <div class="payment-info">
                    <div class="row">
                        <div class="col-6">
                            <strong>شرح:</strong>
                        </div>
                        <div class="col-6">
                            @Model.Description
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <strong>کد رهگیری:</strong>
                        </div>
                        <div class="col-6">
                            @Model.Authority
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <strong>ایمیل:</strong>
                        </div>
                        <div class="col-6">
                            @Model.Email
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <strong>موبایل:</strong>
                        </div>
                        <div class="col-6">
                            @Model.Mobile
                        </div>
                    </div>
                </div>

                <div class="bank-logos">
                    <div class="bank-logo">ملی</div>
                    <div class="bank-logo">ملت</div>
                    <div class="bank-logo">صادرات</div>
                    <div class="bank-logo">پارسیان</div>
                    <div class="bank-logo">سامان</div>
                </div>

                <form action="/UserPanel/MockPayment/ConfirmPayment" method="post">
                    <input type="hidden" name="authority" value="@Model.Authority" />
                    <button type="submit" name="isSuccess" value="true" class="btn-payment btn-success">
                        <i class="bi bi-check-circle"></i> پرداخت موفق تستی
                    </button>
                </form>

                <form action="/UserPanel/MockPayment/ConfirmPayment" method="post">
                    <input type="hidden" name="authority" value="@Model.Authority" />
                    <button type="submit" name="isSuccess" value="false" class="btn-payment btn-danger">
                        <i class="bi bi-x-circle"></i> پرداخت ناموفق تستی
                    </button>
                </form>

                <a href="/UserPanel/Wallet" class="btn-payment btn-secondary">
                    <i class="bi bi-arrow-right"></i> انصراف و بازگشت
                </a>

                <div class="security-badge">
                    <i class="bi bi-shield-check"></i>
                    درگاه امن تستی - این یک درگاه شبیه‌سازی شده برای محیط توسعه می‌باشد
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>